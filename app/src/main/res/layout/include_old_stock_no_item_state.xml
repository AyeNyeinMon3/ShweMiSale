<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_label_no_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No item added yet"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.ShweMi.Headline6"
        app:layout_constraintBottom_toTopOf="@+id/tv_label_add_item"
        android:layout_margin="16dp"
        android:textColor="@color/grey_black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/plus"
        android:text="Add"
        android:textAllCaps="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetRight="0dp"
        android:insetLeft="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_label_add_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Added item will appear here!. Letâ€™s add it right now"
        android:textAlignment="center"
        android:layout_margin="16dp"
        android:textColor="@color/grey_body"
        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gold from home"
        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/iv_back"
         />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_on_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/plus"
        android:text="Add"
        android:textAllCaps="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetRight="0dp"
        android:insetLeft="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>