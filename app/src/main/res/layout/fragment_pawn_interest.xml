<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginEnd="32dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_label_scanVoucher"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7"
                            android:gravity="start|center"
                            android:text="Scan Voucher"
                            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                            android:textColor="@color/primary_text"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayout_scanVoucher"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:boxStrokeColor="@color/edit_text_color"
                            app:boxStrokeWidth="1dp"
                            app:errorEnabled="false"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_scanVoucher"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Type or Scan"
                                android:inputType="number"
                                android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                                android:textColor="@color/primary_text"
                                android:textColorHint="@color/secondary_text" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="32dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_label_prePay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7"
                            android:gravity="start|center"
                            android:text="ကြိုသွင်းငွေ"
                            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                            android:textColor="@color/primary_text"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayout_prePay"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:boxStrokeColor="@color/edit_text_color_2"
                            app:boxStrokeWidth="1dp"
                            app:errorEnabled="false"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_prePay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                                android:textColor="@color/primary_text" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginEnd="32dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_label_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7"
                            android:gravity="start|center"
                            android:text="အမည်"
                            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                            android:textColor="@color/primary_text"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayout_name"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:boxStrokeColor="@color/edit_text_color_2"
                            app:boxStrokeWidth="1dp"
                            app:errorEnabled="false"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                                android:textColor="@color/primary_text" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="32dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_label_prePay_month"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7"
                            android:gravity="start|center"
                            android:text="ကြိုသွင်းထားသောလ"
                            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                            android:textColor="@color/primary_text"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayout_prePay_month"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:boxStrokeColor="@color/edit_text_color_2"
                            app:boxStrokeWidth="1dp"
                            app:errorEnabled="false"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_prePay_month"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                                android:textColor="@color/primary_text" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                    <RadioButton
                        android:id="@+id/radio_pre_input_output"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="ကြိုသွင်း/ထုတ်"
                        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                        android:textColor="@color/primary_text" />

                    <RadioButton
                        android:id="@+id/radio_pre_interest_pay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="ကြိုတိုးရှင်း"
                        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                        android:textColor="@color/primary_text" />

                    <RadioButton
                        android:id="@+id/radio_only_interest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="တိုးယူသက်သက်"
                        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                        android:textColor="@color/primary_text" />

                    <RadioButton
                        android:id="@+id/radio_interest_pay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="အတိုးရှင်း"
                        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                        android:textColor="@color/primary_text" />

                    <RadioButton
                        android:id="@+id/radio_investment_interest_pay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="အရင်းသွင်းအတိုးရှင်း"
                        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                        android:textColor="@color/primary_text" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroup">

                    <RadioButton
                        android:id="@+id/radio_select_investment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="အရင်းသွင်း ခွဲရွေး"
                        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                        android:textColor="@color/primary_text" />

                    <RadioButton
                        android:id="@+id/radio_clearing_interest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="တိုးယူအတိုးရှင်း"
                        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                        android:textColor="@color/primary_text" />

                    <RadioButton
                        android:id="@+id/radio_choose"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="ရွေးယူ"
                        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                        android:textColor="@color/primary_text" />

                    <RadioButton
                        android:id="@+id/radio_pawn_item_sale"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="အပေါင်ပစ္စည်းရောင်းချ"
                        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                        android:textColor="@color/primary_text" />

                    <TextView
                        android:id="@+id/textView58"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />


                </RadioGroup>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/background_edit_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroup2">

                    <include
                        android:id="@+id/include_payment_box"
                        layout="@layout/include_radio_select_investment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <Switch
                    android:id="@+id/switch_app"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/background_text_view"
                    android:elevation="3dp"
                    android:paddingStart="32dp"
                    android:text="App မှ အပေါင်လုပ်ဆောင်ချက်များ လုပ်ဆောင်မည်"
                    android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/switch_app">


                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/label_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_print"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="32dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="ပရင့်ထုတ်"
                        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:cornerRadius="10dp"
                        app:icon="@drawable/print"
                        app:iconSize="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_claimMoney" />

                    <TextView
                        android:id="@+id/tv_label_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1.3"
                        android:gravity="start|center"
                        android:text="ကျသင့်ငွေ"
                        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/textInputLayout_charge"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textInputLayout_charge" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout_charge"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginTop="32dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/edit_text_color_2"
                        app:boxStrokeWidth="1dp"
                        app:errorEnabled="false"
                        app:hintEnabled="false"
                        app:layout_constraintStart_toEndOf="@+id/tv_label_charge"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_charge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                            android:textColor="@color/primary_text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_label_claimMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="64dp"
                        android:layout_weight="1.3"
                        android:gravity="start|center"
                        android:text="တောင်းခံရန်ငွေ"
                        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/textInputLayout_claimMoney"
                        app:layout_constraintStart_toEndOf="@+id/textInputLayout_charge"
                        app:layout_constraintTop_toTopOf="@+id/textInputLayout_claimMoney" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout_claimMoney"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="16dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/edit_text_color_2"
                        app:boxStrokeWidth="1dp"
                        app:errorEnabled="false"
                        app:hintEnabled="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_claimMoney"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                            android:textColor="@color/primary_text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_label_reducedPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="start|center"
                        android:text="လျှော့ပေးငွေ"
                        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/textInputLayout_reducedPay"
                        app:layout_constraintStart_toStartOf="@+id/tv_label_charge"
                        app:layout_constraintTop_toTopOf="@+id/textInputLayout_reducedPay" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout_reducedPay"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="230dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="32dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/edit_text_color_2"
                        app:boxStrokeWidth="1dp"
                        app:errorEnabled="false"
                        app:hintEnabled="false"
                        app:layout_constraintStart_toStartOf="@+id/textInputLayout_charge"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_charge">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_reducedPay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                            android:textColor="@color/primary_text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_select"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="10dp"
                        app:icon="@drawable/right"
                        app:iconSize="15dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textInputLayout_reducedPay"
                        app:layout_constraintEnd_toEndOf="@+id/textInputLayout_charge" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>