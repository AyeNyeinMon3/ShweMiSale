<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_stock"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/primary"
        app:boxStrokeWidth="1dp"
        app:errorEnabled="false"
        app:hintEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_stock_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/inputTextColor"
            android:textSize="13sp"
            tools:text="နားကပ်တစ်ဖက်" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:backgroundTint="@color/white"
        app:icon="@drawable/ic_cross_red"
        app:iconGravity="textStart"
        app:iconTint="@color/primary"
        app:layout_constraintBottom_toBottomOf="@+id/tv_stock"
        app:layout_constraintEnd_toStartOf="@+id/btn_approve"
        app:layout_constraintTop_toTopOf="@+id/tv_stock" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_approve"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:backgroundTint="@color/white"
        app:icon="@drawable/ic_approve_green"
        app:iconGravity="textStart"
        app:iconTint="@color/green_700"
        app:layout_constraintBottom_toBottomOf="@+id/btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_cancel" />
</androidx.constraintlayout.widget.ConstraintLayout>