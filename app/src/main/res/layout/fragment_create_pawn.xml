<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_label_high_loan_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight="1.3"
            android:gravity="start|center"
            android:text="အမြင့်ဆုံးချေးယူနိုင်မည့် \nပမာဏ"
            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textInputLayout_high_loan_amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout_high_loan_amount" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_high_loan_amount"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/edit_text_color_2"
            app:boxStrokeWidth="1dp"
            app:errorEnabled="false"
            app:hintEnabled="false"
            app:layout_constraintStart_toEndOf="@+id/tv_label_high_loan_amount"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_high_loan_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_label_loan_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="32dp"
            android:layout_weight="1.3"
            android:gravity="start|center"
            android:text="ချေးယူမည့်ပမာဏ"
            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textInputLayout_loan_amount"
            app:layout_constraintEnd_toStartOf="@+id/textInputLayout_loan_amount"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout_loan_amount" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_loan_amount"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/edit_text_color"
            app:boxStrokeWidth="1dp"
            app:errorEnabled="false"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout_high_loan_amount">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_loan_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/secondary_text" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_label_interest_percent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight="1.4"
            android:gravity="start|center"
            android:text="အတိုးရာခိုင်နှုန်း"
            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textInputLayout_interest_percent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout_interest_percent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_interest_percent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:layout_weight="1"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/edit_text_color"
            app:boxStrokeWidth="1dp"
            app:errorEnabled="false"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout_high_loan_amount"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout_high_loan_amount">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_interest_percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_label_month"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="start|center"
            android:text="ထားနိုင်သည့်လ"
            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textInputLayout_month"
            app:layout_constraintStart_toStartOf="@+id/tv_label_loan_amount"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout_month" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_month"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/edit_text_color"
            app:boxStrokeWidth="1dp"
            app:errorEnabled="false"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout_loan_amount">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@color/label_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout_interest_percent" />

        <TextView
            android:id="@+id/tv_label_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="မှတ်ချက်"
            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <CheckBox
            android:id="@+id/cb_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_choose_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_choose_date" />

        <TextView
            android:id="@+id/tv_choose_date"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/background_text_view"
            android:drawableEnd="@drawable/calendar"
            android:elevation="3dp"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:text="ရက်ရွေးပါ"
            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cb_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_note" />

        <TextView
            android:id="@+id/tv_label_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="မှ"
            android:textColor="@color/primary_text"
            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
            app:layout_constraintBottom_toBottomOf="@+id/tv_choose_date"
            app:layout_constraintStart_toEndOf="@+id/tv_choose_date"
            app:layout_constraintTop_toTopOf="@+id/tv_choose_date" />

        <TextView
            android:id="@+id/tv_choose_date_2"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_text_view"
            android:drawableEnd="@drawable/calendar"
            android:elevation="3dp"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:text="ရက်ရွေးပါ"
            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tv_label_from"
            app:layout_constraintTop_toTopOf="@+id/tv_choose_date" />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="အတွင်း‌ရွေးပါက အတိုးမပေးရပါ"
            android:textColor="@color/primary_text"
            android:textAppearance="@style/TextAppearance.ShweMi.Body2"
            app:layout_constraintBottom_toBottomOf="@+id/tv_choose_date_2"
            app:layout_constraintStart_toEndOf="@+id/tv_choose_date_2"
            app:layout_constraintTop_toTopOf="@+id/tv_choose_date_2" />

