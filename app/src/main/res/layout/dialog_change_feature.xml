<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_label_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="50dp"
        android:text="ရှေ့ဆက်ရန်‌ရွေးချယ်ပါ"
        android:textColor="@color/primary_text"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_choose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_label_choose"
        app:srcCompat="@drawable/close" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_pawn"
        style="@android:style/Widget.Button"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/background_btn"
        android:text="အပေါင်"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_choose" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_buy"
        style="@android:style/Widget.Button"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_btn"
        android:text="အဝယ်"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_pawn"
        app:layout_constraintStart_toStartOf="@+id/btn_pawn"
        app:layout_constraintTop_toBottomOf="@+id/btn_pawn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sell"
        style="@android:style/Widget.Button"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_btn"
        android:text="အရောင်း"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_buy"
        app:layout_constraintStart_toStartOf="@+id/btn_buy"
        app:layout_constraintTop_toBottomOf="@+id/btn_buy" />

</androidx.constraintlayout.widget.ConstraintLayout>