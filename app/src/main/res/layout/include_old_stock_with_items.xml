<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/materialToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gold from home"
                android:textAppearance="@style/TextAppearance.ShweMi.Body2"
                app:layout_constraintStart_toEndOf="@id/iv_back"
                app:layout_constraintBottom_toBottomOf="@id/iv_back"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/iv_back"
                />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arrow_left"
           />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_on_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:text="Add"
                app:cornerRadius="8dp"
                android:textAllCaps="false"
                app:icon="@drawable/plus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/tv_total_added_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Total added items (1)"
        android:textAppearance="@style/TextAppearance.ShweMi.Headline6"
        android:textColor="@color/grey_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialToolbar" />

    <TextView
        android:id="@+id/tv_label_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Tips : You can only remove item before adding details."
        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
        android:textColor="@color/grey_body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_total_added_items" />

    <TextView
        android:id="@+id/tv_data_empty_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="data empty items"
        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
        android:textColor="@color/grey_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialToolbar" />
    <TextView
        android:id="@+id/tv_value_data_empty_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        tools:text="1"
        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
        android:textColor="@color/grey_ash"
        app:layout_constraintEnd_toStartOf="@id/tv_data_empty_items"
        app:layout_constraintTop_toBottomOf="@id/materialToolbar" />

    <View
        android:id="@+id/divider_view"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@color/grey_ash"
        app:layout_constraintBottom_toBottomOf="@id/tv_data_empty_items"
        app:layout_constraintEnd_toStartOf="@id/tv_value_data_empty_items"
        app:layout_constraintTop_toTopOf="@id/tv_data_empty_items" />

    <TextView
        android:id="@+id/tv_data_filled_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="data filled items"
        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
        android:textColor="@color/grey_label"
        app:layout_constraintEnd_toStartOf="@id/divider_view"
        app:layout_constraintTop_toBottomOf="@id/materialToolbar" />
    <TextView
        android:id="@+id/tv_value_data_filled_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        tools:text="1"
        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
        android:textColor="@color/grey_ash"
        app:layout_constraintEnd_toStartOf="@id/tv_data_filled_items"
        app:layout_constraintTop_toBottomOf="@id/materialToolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_old_stock_bucket"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/item_old_stock_bucket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_tips" />
</androidx.constraintlayout.widget.ConstraintLayout>