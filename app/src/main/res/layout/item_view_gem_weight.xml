<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:divider="@color/grey_input"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:weightSum="5.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:hintEnabled="false"
            android:focusable="true"
            app:errorEnabled="false"
            app:hintAnimationEnabled="false"
            app:suffixText="per item"
            app:suffixTextColor="@color/grey_placeholder"
            android:layout_gravity="center"
            android:paddingStart="16dp"
            android:layout_weight="1"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_quantity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                tools:text="12"
                android:inputType="number"
                android:textColor="@color/secondaryTextColor"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_kpy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:hintEnabled="false"
            app:errorEnabled="false"
            app:suffixText="per item"
            app:hintAnimationEnabled="false"
            app:boxStrokeWidth="0dp"
            app:suffixTextColor="@color/grey_placeholder"
            android:layout_gravity="center"
            android:paddingStart="16dp"
            android:layout_weight="1"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_weight_gm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="6.12"
                android:textColor="@color/grey_black"
                android:textSize="14sp"
                android:textStyle="normal" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:hintEnabled="false"
            app:errorEnabled="false"
            app:suffixText="per item"
            app:hintAnimationEnabled="false"
            app:boxStrokeWidth="0dp"
            android:focusable="false"
            app:suffixTextColor="@color/grey_placeholder"
            android:layout_gravity="center"
            android:paddingStart="16dp"
            android:layout_weight="1"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_weight_KPY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="3K   4P  2Y"
                android:focusable="false"
                android:textColor="@color/grey_black"
                android:textSize="14sp"
                android:textStyle="normal" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/btn_calculate_total_gem_weight"
            android:layout_width="0dp"
            app:elevation="0dp"
            android:layout_height="wrap_content"
            app:strokeWidth="0dp"
            android:layout_gravity="center"
            app:backgroundTint="@color/white"
            app:rippleColor="@color/grey_placeholder"
            android:layout_weight="0.5"
            android:text="Calculate"
            android:textAllCaps="false"
            android:textColor="@color/grey_placeholder"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_total_weight_KPY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:paddingStart="16dp"
            tools:text="3K   4P  2Y"
            android:textColor="@color/grey_black"
            android:textSize="14sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:paddingStart="16dp"
            android:src="@drawable/ic_delete_grey" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/grey_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>