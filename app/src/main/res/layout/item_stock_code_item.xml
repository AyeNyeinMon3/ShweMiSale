<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="@id/iv_item"
        app:layout_constraintTop_toTopOf="@id/iv_item">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:src="@drawable/ic_cross"
            app:tint="@color/white" />
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gold_item" />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SM-PRD-000000001"
        android:textColor="@color/primary_text"
        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_item"
        app:layout_constraintStart_toStartOf="@+id/iv_item"
        app:layout_constraintTop_toBottomOf="@+id/iv_item" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12â€"
        android:textColor="@color/primary_text"
        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
        app:layout_constraintEnd_toEndOf="@+id/tv_code"
        app:layout_constraintStart_toStartOf="@+id/tv_code"
        app:layout_constraintTop_toBottomOf="@+id/tv_code" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="400,000"
        android:textAppearance="@style/TextAppearance.ShweMi.Body2"
        android:textColor="@color/primary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_size"
        app:layout_constraintStart_toStartOf="@+id/tv_size"
        app:layout_constraintTop_toBottomOf="@+id/tv_size" />
</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
