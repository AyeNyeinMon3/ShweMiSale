<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_checked="false">
        <layer-list>
            <item >
                <shape android:shape="rectangle">
                    <corners
                        android:radius="10dp"/>
                    <stroke
                        android:color="#CBD2D9"
                        android:width="1dp"/>

                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item >
                <shape android:shape="rectangle">
                    <corners
                        android:radius="10dp"/>
                    <stroke
                        android:color="@color/primary"
                        android:width="1dp"/>

                </shape>
            </item>
        </layer-list>
    </item>

<!--    <item android:drawable="@drawable/baseline_radio_button_unchecked_24" android:state_checked="false"/>-->
<!--    <item android:drawable="@drawable/baseline_radio_button_checked_24" android:state_checked="true"/>-->

</selector>