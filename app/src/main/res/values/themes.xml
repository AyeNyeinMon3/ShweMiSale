<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShweMiSale" parent="Base.Theme.ShweMiSale">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>

    </style>
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="background">@color/white</item>
        <item name="titleTextAppearance">@style/TitleTextStyle</item>
    </style>
    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/primary</item>
    </style>

    <style name="Base.Theme.ShweMiSale" parent="Based.Theme.MaterialThemeBuilder">
        <item name="textAppearanceHeadline1">@style/TextAppearance.ShweMi.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.ShweMi.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.ShweMi.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.ShweMi.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.ShweMi.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.ShweMi.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.ShweMi.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.ShweMi.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.ShweMi.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.ShweMi.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.ShweMi.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.ShweMi.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.ShweMi.Overline</item>

    </style>
    <style name="Based.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>

    </style>
</resources>