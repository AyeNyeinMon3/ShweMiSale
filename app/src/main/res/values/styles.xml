<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginHintText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="itemText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Divider">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="chipText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>